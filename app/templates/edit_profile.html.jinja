{% extends 'base.html' %}
  {% block content %}
    <section class="hero is-success is-fullheight">
        <div class="hero-body">
            <div class="container has-text-centered">
                <div class="column is-4 is-offset-4">
                    <h3 class="title has-text-black">Edit Profile</h3>
                    <hr class="login-hr">
                    <div class="box">
                       <form method="post" action="{{ url_for('edit_profile', username=session['username']) }}">
                          {{ form.hidden_tag() }}
                          {{ form.csrf_token }}
                          <p class="has-text-black">Username</p>
                          <div class="field">
                            <div class="control">
                              {{ form.username(size=32) }}
                              {% for error in form.username.errors%}
                              <span class="has-text-danger">{{ error }}</span>
                              {% endfor %}
                            </div>
                          </div>
                          <label for="email" class="has-text-black">Email</label>
                          <div class="field">
                            <div class="control">
                              {{ form.email(size=32) }}
                              {% for error in form.email.errors %}
                              <span class="has-text-danger">{{ error }}</span>
                              {% endfor %}

                            </div>
                          </div>
                          <label for="bio" class="has-text-black">About Me</label>
                          <div class="field">
                            <div class="control">
                              {{ form.bio(size=64) }}
                              {% for error in form.bio.errors %}
                              <span class="has-text-danger">{{ error }}</span>
                              {% endfor %}

                          </div>
                        </div>
                              {{ form.submit() }}
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
  {% endblock %}
 
